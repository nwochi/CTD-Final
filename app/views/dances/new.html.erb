<h1>New Dance</h1>
<!--< %= render 'form', dance:@dance %>-->

<%= form_for (@dance) do |f| %>
    <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
            <% if @dance.errors.full_messages_for(:title).each do |message| %>
                <div><%= message %></div>
            <% end %>
    </div>
<% end %>

    <div class="field">
        <%= f.label :description %> <br>
        <%= f.text_field :description %>
    </div>
    
    <div>
        <%= f.submit %>
    </div>
    
<% end %>

<div>
<%= link_to 'Add Phrases to Your Dance', add_phrase_name_path %> |
<%= link_to 'Back', dances_path %> |
<%= link_to 'Home', root_path %>
</div>