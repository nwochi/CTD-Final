<!--< %= render 'form', dance:@dance %>-->
<!DOCTYPE HTML>
<html lang="en">
    <head>
        <title>New Dance</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        
        <!--<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>-->
    </head>
    
    <body>
        <p id="notice"><%= notice %></p>
        <div class="jumbotron jumbotron-fluid bg-dark text-white">
            <div class="container text-lg-center">
                <h1 class="display-1"><strong>New Dance</strong></h1>
            </div>
        </div>
        
        <div>
            <%= form_for (@dance) do |f| %>
                <div class="field">
                    <%= f.label :title %><br>
                    <%= f.text_field :title %>
                        <% if @dance.errors.full_messages_for(:title).each do |message| %>
                            <div><%= message %></div>
                            <% end %>
                        <% end %>
                </div>

                <div class="field">
                    <%= f.label :description %> <br>
                    <%= f.text_field :description %>
                </div>
    
                <div>
                    <%= f.submit %>
                </div>
            <% end %>
        </div>

        <div>
            <nav class="navbar-expand-lg navbar-dark bg-dark fixed-bottom">
                <%= link_to 'Back', dances_path %> |
                <%= link_to 'Home', root_path %>
            </nav>
        </div>
        
    </body>
</html>